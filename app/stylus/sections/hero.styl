// Hero section

.hero
  min-height: 650px
  padding-top: 80px
  padding-bottom: 20px
  background: url(../images/hero-san-francisco.jpg) no-repeat center bottom
  background-size: cover
  color: white

  h2
    font-style: italic

  .container
    position: relative

  .date
    margin-top: 50px
    font-size: 40px

  .location
    font-size: 24px

  @media screen and (max-width: $small-width)

    min-height: 500px

    h1
      font-size: 40px
    h2
      font-size: 20px
    .date
      font-size: 24px
    .location
      font-size: 16px