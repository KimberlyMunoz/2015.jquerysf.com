// Social section

.social
  padding: 10px 20px 0

  .subscribe,
  .social-links
    float: right

  .social-links
    margin: 10px

    a
      display: inline-block
      color: $grey-drk
      font-weight: $font-weight-bold

    .twitter
      padding: 12px
      padding-left: 50px
      padding-right: 20px
      background: $grey-light url(../images/twitter-logo.svg) no-repeat 15px center
      background-size: 24px 20px
      border-radius: 4px